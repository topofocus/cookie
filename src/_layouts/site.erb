<%#    ------------------------------------------------------------------------  %>
<%#    Layout site                                                               %>
<%#                 the calling script has to include its own main tag           %>
<%#    ------------------------------------------------------------------------  %>

<!doctype html>
<html lang="<%= site.locale %>" class="h-full">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="h-full <%= resource.data.layout %> <%= resource.data.page_class %>">
    <%= render Shared::Navbar.new( metadata: site.metadata, resource: resource ) %> 

      <%= yield %>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
